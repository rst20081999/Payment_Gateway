<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbg"
    tools:context=".login_activity.regiter_activity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="Your Name" />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="Your first Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="34dp" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="159dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Your Last Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="34dp" />

    <Spinner
        android:id="@+id/spinnerCountries"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:autofillHints="phone"
        android:digits="0123456789"
        android:hint="@string/phone_hint"
        android:inputType="phone"
        android:maxLength="10"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerCountries"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerCountries"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCountries"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:background="#00e5ff"
        android:text="@string/otp"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>